{% extends 'layout/layout.jinja2' %}
{% block title %}Accounts / {% if id %}Edit{% else %}Add{% endif %} Account{% endblock %}

{% block content %}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1><i class="fas fa-key"></i> {% if id %}Edit{% else %}Add{% endif %} Account</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item">
                                <a href="/">Home</a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="/accounts">Accounts</a>
                            </li>
                            <li class="breadcrumb-item active">{% if id %}Edit{% else %}Add{% endif %} Account</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">
            <!-- /.content -->
            <div class="container-fluid">

                <div class="row">
                    <div class="col-12">
                        <div class="card card-row card-secondary">

                            <div class="card-header">
                                <h3 class="card-title">
                                    Account Details
                                </h3>
                                <div class="card-tools">
                                    <button type="button" title="Cancel" class="btn btn-tool btn-cancel"><i
                                            class="fas fa-xmark"></i>
                                    </button>
                                </div>
                            </div>
                            <!-- /.card-header -->

                            <form id="frmEdit" action="" method="post">
                                <input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}"/>
                                <div class="card-body">

                                    <div class="form-group">
                                        <label for="txtOrgName">Organization Name</label>
                                        <input type="text" class="form-control" id="txtOrgName" name="org_name"
                                               placeholder="Organization Legal Name"
                                               value="{% if account.org_name %}{{ account.org_name }}{% endif %}">
                                    </div>
                                    <!-- /.form-group -->

                                    <div class="row">

                                        <div class="col col-6">

                                            <div class="form-group">
                                                <label for="txtPrimaryContactName">Primary Contact Name</label>
                                                <input type="text" class="form-control" id="txtPrimaryContactName"
                                                       name="primary_contact_name"
                                                       placeholder="Primary Contact Full Name"
                                                       value="{% if account.primary_contact_name %}{{ account.primary_contact_name }}{% endif %}">
                                            </div>
                                            <!-- /.form-group -->

                                            <div class="form-group">
                                                <label for="txtPrimaryContactPhone1">Primary Contact Phone 1</label>
                                                <input type="text" class="form-control" id="txtPrimaryContactPhone1"
                                                       name="primary_contact_phone1"
                                                       placeholder="Primary Contact Phone #1"
                                                       value="{% if account.primary_contact_phone1 %}{{ account.primary_contact_phone1 }}{% endif %}">
                                            </div>
                                            <!-- /.form-group -->

                                            <div class="form-group">
                                                <label for="txtPrimaryContactPhone2">Primary Contact Phone 2</label>
                                                <input type="text" class="form-control" id="txtPrimaryContactPhone2"
                                                       name="primary_contact_phone2"
                                                       placeholder="Primary Contact Phone #2"
                                                       value="{% if account.primary_contact_phone2 %}{{ account.primary_contact_phone2 }}{% endif %}">
                                            </div>
                                            <!-- /.form-group -->

                                        </div>
                                        <!-- /.col -->

                                        <div class="col col-6">

                                            <div class="form-group">
                                                <label for="txtSecondaryContactName">Secondary Contact Name</label>
                                                <input type="text" class="form-control" id="txtSecondaryContactName"
                                                       name="secondary_contact_name"
                                                       placeholder="Secondary Contact Full Name"
                                                       value="{% if account.secondary_contact_name %}{{ account.secondary_contact_name }}{% endif %}">
                                            </div>
                                            <!-- /.form-group -->

                                            <div class="form-group">
                                                <label for="txtSecondaryContactPhone1">Secondary Contact Phone 1</label>
                                                <input type="text" class="form-control" id="txtSecondaryContactPhone1"
                                                       name="secondary_contact_phone1"
                                                       placeholder="Secondary Contact Phone #1"
                                                       value="{% if account.secondary_contact_phone1 %}{{ account.secondary_contact_phone1 }}{% endif %}">
                                            </div>
                                            <!-- /.form-group -->

                                            <div class="form-group">
                                                <label for="txtSecondaryContactPhone2">Secondary Contact Phone 2</label>
                                                <input type="text" class="form-control" id="txtSecondaryContactPhone2"
                                                       name="secondary_contact_phone2"
                                                       placeholder="Secondary Contact Phone #2"
                                                       value="{% if account.secondary_contact_phone2 %}{{ account.secondary_contact_phone2 }}{% endif %}">
                                            </div>
                                            <!-- /.form-group -->

                                        </div>
                                        <!-- /.col -->

                                    </div>
                                    <!-- /.row -->

                                    <div class="form-group">
                                        <label for="txtNotes">Notes</label>
                                        <textarea class="form-control" rows="3" id="txtNotes" name="notes"
                                                  placeholder="Account notes...">{% if account.notes %}{{ account.notes }}{% endif %}</textarea>
                                    </div>
                                    <!-- /.form-group -->

                                </div>
                                <!-- /.card-body -->

                                <div class="card-footer">
                                    <button type="submit" title="{% if id %}Update{% else %}
                                        Create{% endif %} Account" class="btn btn-primary">{% if id %}Update{% else %}
                                        Create{% endif %}</button>
                                    <button type="button" title="Cancel" class="btn btn-danger float-right btn-cancel">
                                        Cancel
                                    </button>
                                </div>
                                <!-- /.card-footer -->

                            </form>
                            <!-- /form -->

                        </div>
                        <!-- /.card -->
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->

            </div><!-- /.container-fluid -->
        </section>
    </div>
    <!-- /.content-wrapper -->
{% endblock %}

{% block footer_scripts %}
    <script type="text/javascript">
        let btnCancel = null
        let frmEdit = null

        let phoneNormalizer = function (value) {
            return $.trim(value.replace(/\D+/g, ''))
        }

        let onBtnCancelClick = function (e) {
            window.location = '/accounts'
        }

        let setupListeners = function () {
            btnCancel.bind('click', onBtnCancelClick)
        }

        let setupValidation = function () {
            frmEdit.validate({
                rules: {
                    org_name: {
                        required: false,
                        minlength: 3,
                        maxlength: 30,
                    },
                    primary_contact_name: {
                        required: true,
                        minlength: 2,
                        maxlength: 50,
                    },
                    primary_contact_phone1: {
                        required: true,
                        phoneUS: true,
                        maxlength: 17,
                        normalizer: phoneNormalizer,
                    },
                    primary_contact_phone2: {
                        required: false,
                        phoneUS: true,
                        maxlength: 17,
                        normalizer: phoneNormalizer,
                    },
                    secondary_contact_name: {
                        required: false,
                        minlength: 2,
                        maxlength: 50,
                    },
                    secondary_contact_phone1: {
                        required: false,
                        phoneUS: true,
                        maxlength: 17,
                        normalizer: phoneNormalizer,
                    },
                    secondary_contact_phone2: {
                        required: false,
                        phoneUS: true,
                        maxlength: 17,
                        normalizer: phoneNormalizer,
                    },
                    notes: {
                        required: false,
                        maxlength: 3000,
                    },
                },
                errorPlacement: function (error, element) {
                    error.appendTo(element.parents('.form-group'))
                },
            })
        }

        $(function () {
            btnCancel = $('.btn-cancel')
            frmEdit = $('#frmEdit')
            setupListeners()
            setupValidation()
        })
    </script>
{% endblock %}